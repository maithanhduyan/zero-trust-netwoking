# Zero Trust Control Plane - Environment Configuration
# Copy this file to .env and update values

# === Application ===
APP_NAME="Zero Trust Control Plane"
APP_VERSION="1.0.0"
ENV=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO

# === API ===
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# CORS (comma-separated list for multiple origins)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# === Database ===
# SQLite (development)
DATABASE_URL=sqlite:///./zerotrust.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://zt_admin:your_password@localhost:5432/zt_control_plane
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# === Security ===
SECRET_KEY=change-me-in-production-use-secrets-manager
ADMIN_SECRET=change-me-admin-secret

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# === WireGuard Network ===
OVERLAY_NETWORK=10.0.0.0/24
OVERLAY_GATEWAY=10.0.0.1

# Hub Configuration
# Generate keys with: wg genkey | tee privatekey | wg pubkey > publickey
HUB_PUBLIC_KEY=REPLACE_WITH_YOUR_HUB_PUBLIC_KEY
HUB_ENDPOINT=your-hub-domain.com:51820
HUB_LISTEN_PORT=51820

# DNS Servers (JSON array)
DNS_SERVERS=["10.0.0.1", "1.1.1.1"]

# === Node Registration ===
REQUIRE_REGISTRATION_TOKEN=false
REGISTRATION_TOKEN=your-secure-registration-token
AUTO_APPROVE_ROLES=["ops", "hub"]
AUTO_APPROVE_ALL=true  # Set false in production

# === Agent Sync ===
HEARTBEAT_INTERVAL=30
CONFIG_SYNC_INTERVAL=60
NODE_TIMEOUT_MINUTES=5

# === Logging & Audit ===
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90
