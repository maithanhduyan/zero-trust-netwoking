# =============================================================================
# ZERO TRUST NETWORKING - INVENTORY TEMPLATE
# =============================================================================
# 
# Copy file này thành hosts.ini và điền thông tin thực:
#   cp hosts.ini.example hosts.ini
#
# ⚠️  KHÔNG COMMIT hosts.ini LÊN GIT!
# =============================================================================

[local]
localhost ansible_connection=local

# =============================================================================
# CONTROL PLANE - Quản lý và điều phối
# =============================================================================
[control_plane]
hub-server   ansible_host=YOUR_HUB_PUBLIC_IP   wg_address=10.10.0.1   wg_public_key="YOUR_HUB_PUBLIC_KEY"

[control_plane:vars]
node_role=control_plane
wg_is_hub=true

# =============================================================================
# WORKER NODES - Chạy workloads
# =============================================================================

# Database Nodes (10.10.0.10-19)
[db_nodes]
# db-primary   ansible_host=DB_PUBLIC_IP   wg_address=10.10.0.10   wg_public_key="UPDATE_AFTER_SETUP"
# db-replica   ansible_host=DB2_PUBLIC_IP  wg_address=10.10.0.11   wg_public_key="UPDATE_AFTER_SETUP"

[db_nodes:vars]
node_role=database

# Application Nodes (10.10.0.20-29)
[app_nodes]
# odoo-app-1   ansible_host=APP_PUBLIC_IP   wg_address=10.10.0.20   wg_public_key="UPDATE_AFTER_SETUP"

[app_nodes:vars]
node_role=application

# Operations/Monitoring Nodes (10.10.0.30-39)
[ops_nodes]
# monitoring   ansible_host=OPS_PUBLIC_IP   wg_address=10.10.0.30   wg_public_key="UPDATE_AFTER_SETUP"

[ops_nodes:vars]
node_role=monitoring

# =============================================================================
# GROUP AGGREGATIONS
# =============================================================================
[worker_nodes:children]
db_nodes
app_nodes
ops_nodes

[cluster:children]
control_plane
worker_nodes

[docker_hosts:children]
db_nodes
app_nodes

[production:children]
db_nodes
app_nodes
