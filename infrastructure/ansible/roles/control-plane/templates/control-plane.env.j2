# {{ ansible_managed }}
# Control Plane Environment Configuration

# Database
DATABASE_URL={{ control_plane_database_url }}

# Network Configuration
OVERLAY_NETWORK={{ overlay_network }}
HUB_OVERLAY_IP={{ hub_overlay_ip }}

# Hub WireGuard Configuration
HUB_PUBLIC_KEY={{ wireguard_public_key }}
HUB_ENDPOINT={{ ansible_host | default(ansible_default_ipv4.address) }}:{{ wireguard_port }}

# Security
ADMIN_SECRET={{ admin_secret }}
AUTO_APPROVE_ALL={{ auto_approve_nodes | lower }}

# Logging
LOG_LEVEL={{ log_level }}

# Server
HOST={{ control_plane_host }}
PORT={{ control_plane_port }}
